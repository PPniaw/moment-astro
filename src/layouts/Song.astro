---
import BaseHead from '../components/BaseHead.astro';
import SitePathHeader from '../components/SitePathHeader.astro';
import Heading from '../components/Heading.astro';
import Heard from '../components/Heard.astro';
import Lyric from '../components/Lyric.astro';
import Footer from '../components/Footer.astro';

const { content } = Astro.props;
const { name, year, publishDate, heard, artist, heroImage, permalink, datePublished, dateModified, alt } = content;

const title = `聽到 ${name} | ${artist} 的電視影劇`;
const description = `也有歌詞。${artist} 在 ${year} 年發行的作品，出現在${heard.join('、')}。`;
---

<html lang="zh-Hant-TW">
  <head>
    <BaseHead {title} {description} {name} {permalink} {datePublished} {dateModified} {artist} />
  </head>
  <body>
    <header class="songMeta">
      <SitePathHeader {artist} />
      <Heading {name} {year} {permalink} />
      <aside class="heard deviceDesktop">
        <Heard {heard} />
      </aside>
    </header>
    <aside class="heard deviceMobile">
      <Heard {heard} />
    </aside>
    <main class="content">
      <Lyric {title} {artist} {heroImage} {publishDate} {alt}>
        <slot />
      </Lyric>
    </main>
    <Footer />
  </body>
</html>

<style lang="scss">
body {
  display: grid;
  grid: "meta" auto
        "heard" auto
        "lyric" auto
        "footer" auto / auto;
  background: hsl(var(--color-shade0));

  @media screen and (min-width: 992px) {
    grid: "meta lyric" auto
          "heard lyric" auto
          "footer footer" auto / 400px minmax(10px, 560px);
    align-items: start;
    justify-content: center;
    column-gap: 48px;
  }
}

.songMeta {
  grid-area: meta;
  position: sticky;
  top: 0;
  font-family: var(--font-body);
  background: hsla(var(--color-shade0), 0.5);
  -webkit-backdrop-filter: blur(8px);
  backdrop-filter: blur(8px);


  @media screen and (min-width: 992px) {
    padding-left: 16px;
  }
}

.heard {
  grid-area: heard;

  &.deviceMobile {
    margin: 0 16px 24px;

    @media screen and (min-width: 992px) {
      display: none;
    }
  }
  &.deviceDesktop {
    display: none;

    @media screen and (min-width: 992px) {
      display: block;
    }
  }
}

.content {
  grid-area: lyric;
  margin-bottom: 64px;
  padding: 0 16px;

  @media screen and (min-width: 992px) {
    padding: 48px 0 0;
  }
}
</style>
