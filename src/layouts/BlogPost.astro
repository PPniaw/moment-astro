---
import BaseHead from '../components/BaseHead.astro';
import SitePathHeader from '../components/SitePathHeader.astro';
import Heading from '../components/Heading.astro';
import Heard from '../components/Heard.astro';
import BlogPost from '../components/BlogPost.astro';
import Footer from '../components/Footer.astro';

const { content } = Astro.props;
const { name, year, publishDate, heard, artist, heroImage, permalink, alt } = content;

const title = `聽到 ${name} (${artist}) 的電視影劇`
const description = `也有歌詞。${artist} 在 ${year} 年發行的作品，出現在${heard.join('、')}。`
---

<html lang="zh-Hant-TW">
	<head>
		<BaseHead {title} {description} {permalink} />
	</head>

	<body>
		<SitePathHeader {artist} />
		{
			console.log(content)
		}
		<Heading {name} {year} {permalink} />
		<aside class="heard">
			<Heard {heard} />
		</aside>
		<main class="content">
			<BlogPost {title} {artist} {heroImage} {publishDate} {alt}>
				<slot />
			</BlogPost>
		</main>
		<Footer />
	</body>
</html>

<style lang="scss">
	body {
		background: hsl(var(--color-shade100));
	}

	.heard {
		/* grid-area: heard; */
		margin-bottom: 32px;
		padding: 12px 16px;
		font-family: var(--font-body);
		background-color: hsl(var(--color-midnight100));

		@media screen and (min-width: 1200px) {
    	padding: 0;
  	}
	}

	.content {
		/* grid-area: lyric; */
		margin-bottom: 64px;
		padding: 0 16px;

		@media screen and (min-width: 1200px) {
    	padding: 0;
  	}
	}
</style>
