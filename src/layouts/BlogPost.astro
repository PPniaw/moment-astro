---
import BaseHead from '../components/BaseHead.astro';
import SitePathHeader from '../components/SitePathHeader.astro';
import BlogPost from '../components/BlogPost.astro';
import Footer from '../components/Footer.astro';

const { content } = Astro.props;
const { name, year, publishDate, heard, artist, heroImage, permalink, alt } = content;

const title = `聽到 ${name} (${artist}) 的電視影劇`
const description = `也有歌詞。${artist} 在 ${year} 年發行的作品，出現在${heard.join('、')}。`
---

<html lang="zh-Hant-TW">
	<head>
		<BaseHead {title} {description} {permalink} />
	</head>

	<body>
		<SitePathHeader {artist} />
		<div class="wrapper">
			<BlogPost {title} {artist} {heroImage} {publishDate} {heard} {alt}>
				<slot />
			</BlogPost>
		</div>
		<Footer />
	</body>
</html>

<style lang="scss">
	body {
		background: hsl(var(--color-shade100));
	}
</style>
