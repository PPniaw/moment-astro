---
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogPost from '../components/BlogPost.astro';

const { content } = Astro.props;
const { name, year, publishDate, heard, artist, heroImage, permalink, alt } = content;

const title = `聽到 ${name} (${artist}) 的電視影劇`
const description = `也有歌詞。${year} 發行，出現在${heard.join('、')}。`
---

<html lang={content.lang || 'en'}>
	<head>
		<BaseHead {title} {description} {artist} {permalink} />
	</head>

	<body>
		<BlogHeader />
		<div class="wrapper">
			<BlogPost {title} {artist} {heroImage} {publishDate} {heard} {alt}>
				<slot />
			</BlogPost>
		</div>
	</body>
</html>
