---
export interface Props {
  heard: string[];
}

const { heard } = Astro.props;
---
<strong class="title">出現在</strong>
<ul class="list">
{
  heard.map((medium) => {
    return <li class="listItem">{medium}</li>
  })
}
</ul>

<style lang="scss">
.title {
  display: inline-block;
  margin: 0 0 12px;
  color: hsl(var(--color-midnight700));
  font-size: 1.6rem;
}

.list {
  display: grid;
  row-gap: 16px;
  margin: 0;
  padding: 0;
}

.listItem {
  color: hsl(var(--color-midnight1100));
  font-size: 1.4rem;
  line-height: 18px;
  list-style: none;
}

</style>