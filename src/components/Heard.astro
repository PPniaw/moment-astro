---
export interface Props {
  heard: {
    emoji: string;
    name: string;
    year: string;
  };
}

const { heard } = Astro.props;
---

<strong class="title">出現在</strong>
<ul class="yearList">
{
  heard.map(({ emoji, media }) => {
    return(
      <li class="listItem year">
        <strong class="mediaEmoji">{emoji}</strong>
        <ul class="mediaList">
          {
            media.map(({ name, year }) => {
              return(
              <li class="listItem">
                <span class="mediaName">{name}</span>
                <span class="mediaYear">{year}</span>
              </li>)
            })
          }
        </ul>
      </li>
    )
  })
}
</ul>

<style lang="scss">
.title {
  display: inline-block;
  margin: 0 0 12px;
  color: hsl(var(--color-shade700));
  font-size: 1.6rem;
}

.yearList {
  display: grid;
  grid: auto-flow dense / auto;
  gap: 12px;
  margin: 0;
  padding: 0;

  @media screen and (min-width: 992px) {
    grid: auto auto / repeat(auto-fill, minmax(200px, 1fr));
  }
}

.mediaList {
  margin: 0;
  padding: 8px 12px;
  background-color: hsl(var(--color-shade100));
  border-radius: 12px;
}

.listItem {
  list-style: none;

  &.year {
    display: grid;
    grid: auto 1fr / auto;
  }
}

.mediaEmoji {
  display: inline-block;
  margin-bottom: 4px;
  color: hsl(var(--color-shade1100));
  font-size: 1.8rem;
}

.mediaName {
  display: inline-block;
  margin-right: 4px;
  color: hsl(var(--color-shade1100));
  font-size: 1.6rem;
  line-height: 32px;
  font-weight: 400;
}

.mediaYear {
  display: inline-block;
  color: hsl(var(--color-shade700));
  font-size: 1.4rem;
  font-weight: 400;
}

</style>