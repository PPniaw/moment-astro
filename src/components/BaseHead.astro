---
export interface Props {
  title: string;
  description: string;
  permalink: string;
  schemaHome: boolean;
  artist: string;
}

const { title, description, permalink, artist, schemaHome, datePublished, dateModified } = Astro.props;

const published = new Date(datePublished).toISOString();
const modified = new Date(dateModified).toISOString();

const moreSchema = schemaHome ? '' : {
  '@type': 'BreadcrumbList',
  'itemListElement': [{
    '@type': 'ListItem',
    'position': 1,
    'name': artist
  }]
};

const schema = JSON.stringify({
  '@context': 'https://schema.org',
  '@graph': [{
    '@type': 'WebPage',
    url: import.meta.env.PUBLIC_HOSTNAME + '/' + permalink,
    name: title,
    datePublished: published,
    dateModified: modified,
    publisher: {
      '@type': 'Organization',
      name: 'Intersection',
      url: 'https://intersection.tw',
      logo: {
        '@type': 'ImageObject',
        name: 'Intersection: 優化、插件、高清、視頻、反饋、交互設計：已經看膩這些中國網路媒體用語。',
        width: 400,
        height: 400,
        url: 'https://moment.intersection.tw/images/intersection.png'
      }
    }},
    moreSchema
  ]
});
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={import.meta.env.PUBLIC_HOSTNAME + '/' + permalink} />
<link rel="icon" sizes="any" href="/favicon.ico" />
<link rel="icon" type="image/svg+xml" href="/logo/initial.svg" />
<link rel="apple-touch-icon" href="/logo/large.png">
<link rel="manifest" href="/manifest.webmanifest">
<meta property="og:type" content="website" />
<meta property="og:url" content={import.meta.env.PUBLIC_HOSTNAME + '/' + permalink} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content="https://astro.build/social.jpg?v=1" />
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={import.meta.env.PUBLIC_HOSTNAME + '/' + permalink} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content="https://astro.build/social.jpg?v=1" />
{`<script type="application/ld+json">${schema}</script>`}
<link rel="preconnect" href="https://fonts.gstatic.com" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" />
<script async src="https://cdn.splitbee.io/sb.js" />
<style global>
  @import '../styles/global.css';
</style>
