---
export interface Props {
  name: string;
  year: string;
  permalink: string;
}

const { name, year, permalink } = Astro.props;
---

<h1 class="song">
	<img class="albumCover" src={`/assets${permalink}.jpg`} alt={`${name} 的專輯封面`} />
	<span class="name">{name}</span>
	<span class="year">{year}</span>
</h1>

<style>
	.song {
		display: grid;
		grid: "cover song" auto
		      "cover year" auto / 48px 1fr;
		/* align-items: center; */
		column-gap: 12px;
		margin: 0 0 16px;
		padding: 0 16px;
	}

	.albumCover {
		grid-area: cover;
		max-width: 100%;
		aspect-ratio: 1;
		border: 1px solid hsla(var(--color-midnight300), 0.5);
		border-radius: 4px;
	}

	.name {
		grid-area: song;
		margin-top: -4px;
		color: hsl(var(--color-dawn));
		font-size: 2.8rem;
	}

	.year {
		grid-area: year;
		color: hsl(var(--color-midnight700));
		font-size: 1.4rem;
		font-weight: 400;
		line-height: 20px;
	}
</style>
