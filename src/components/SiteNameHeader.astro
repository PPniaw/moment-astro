---
import MomentLogo from '../../public/logo/initial.svg';
---

<header class="siteName">
	<img class="logo" src={MomentLogo} alt="The Moment" />
	<h1 class="fullname">看電影看劇時，聽到喜歡的音樂</h1>
</header>

<style lang="scss">
.siteName {
	display: grid;
	grid: auto / 48px 1fr;
	column-gap: 12px;
	align-items: center;
	padding: 16px 16px 0;

	@media screen and (min-width: 768px) {
		grid: auto /
					auto;
		row-gap: 12px;
	}
}

.logo {
	width: 48px;
	aspect-ratio: 1;
}

.fullname {
	margin: 0;
	color: hsl(var(--color-midnight1100));
	font-size: clamp(1.6rem, 1.8vw, 2rem);
	font-weight: 400;
}
</style>
